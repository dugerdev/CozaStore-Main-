@model List<CozaStore.Application.DTOs.ContactDto>
@{
    ViewData["Title"] = "Okunmamış Mesajlar";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h3 class="card-title">Okunmamış Mesajlar</h3>
                <a asp-action="Index" class="btn btn-secondary btn-sm">
                    <i class="bi bi-arrow-left me-1"></i> Tüm Mesajlar
                </a>
            </div>
            <div class="card-body">
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        @TempData["SuccessMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }
                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        @TempData["ErrorMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>E-posta</th>
                            <th>Mesaj</th>
                            <th>Tarih</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var contact in Model)
                            {
                                <tr class="table-warning">
                                    <td>@contact.Email</td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(contact.Message))
                                        {
                                            @if (contact.Message.Length > 50)
                                            {
                                                @contact.Message.Substring(0, 50)
                                                <text>...</text>
                                            }
                                            else
                                            {
                                                @contact.Message
                                            }
                                        }
                                        else
                                        {
                                            <text>-</text>
                                        }
                                    </td>
                                    <td>@contact.CreatedDate.ToString("dd.MM.yyyy HH:mm")</td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-action="Details" asp-route-id="@contact.Id" class="btn btn-info btn-sm">
                                                <i class="bi bi-eye"></i> Detay
                                            </a>
                                            <form asp-action="MarkAsRead" asp-route-id="@contact.Id" method="post" class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-success btn-sm">
                                                    <i class="bi bi-check-circle"></i> Okundu
                                                </button>
                                            </form>
                                            <form asp-action="Delete" asp-route-id="@contact.Id" method="post" class="d-inline" onsubmit="return confirm('Bu mesajı silmek istediğinizden emin misiniz?');">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-danger btn-sm">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="4" class="text-center">Okunmamış mesaj bulunmamaktadır.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
