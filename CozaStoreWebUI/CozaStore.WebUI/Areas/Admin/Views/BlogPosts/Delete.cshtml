@model CozaStore.Application.DTOs.BlogPostDto
@{
    ViewData["Title"] = "Blog Gönderisi Sil";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Blog Gönderisi Sil</h3>
            </div>
            <div class="card-body">
                <div class="alert alert-warning">
                    <i class="bi bi-exclamation-triangle me-2"></i>
                    Bu blog gönderisini silmek istediğinizden emin misiniz?
                </div>

                <dl class="row">
                    <dt class="col-sm-3">Başlık:</dt>
                    <dd class="col-sm-9">@Model.Title</dd>

                    <dt class="col-sm-3">Yazar:</dt>
                    <dd class="col-sm-9">@(Model.AuthorName ?? "Admin")</dd>

                    <dt class="col-sm-3">Yayın Durumu:</dt>
                    <dd class="col-sm-9">
                        @if (Model.IsPublished)
                        {
                            <span class="badge bg-success">Yayında</span>
                        }
                        else
                        {
                            <span class="badge bg-warning">Taslak</span>
                        }
                    </dd>

                    <dt class="col-sm-3">Oluşturulma Tarihi:</dt>
                    <dd class="col-sm-9">@Model.CreatedDate.ToString("dd.MM.yyyy HH:mm")</dd>
                </dl>
            </div>
            <div class="card-footer">
                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash me-1"></i> Sil
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-x-circle me-1"></i> İptal
                    </a>
                </form>
            </div>
        </div>
    </div>
</div>

