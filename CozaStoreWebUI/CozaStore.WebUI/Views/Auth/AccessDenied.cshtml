@{
    ViewData["Title"] = "Access Denied";
    ViewData["ActiveMenu"] = "";
    ViewData["HeaderClass"] = "header-v4";
    ViewData["MenuShadow"] = "yes";
}

<!-- Breadcrumb -->
<div class="container">
    <div class="bread-crumb flex-w p-l-25 p-r-15 p-t-30 p-lr-0-lg">
        <a asp-controller="Home" asp-action="Index" class="stext-109 cl8 hov-cl1 trans-04">
            Home
            <i class="fa fa-angle-right m-l-9 m-r-10" aria-hidden="true"></i>
        </a>
        <span class="stext-109 cl4">
            Access Denied
        </span>
    </div>
</div>

<!-- Access Denied Content -->
<section class="bg0 p-t-104 p-b-116">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="size-210 bor10 p-lr-70 p-t-50 p-b-50 p-lr-15-lg w-full-md text-center">
                    <!-- Icon -->
                    <div class="m-b-30">
                        <i class="zmdi zmdi-lock-outline" style="font-size: 80px; color: #717fe0;"></i>
                    </div>

                    <!-- Başlık -->
                    <h2 class="mtext-105 cl2 p-b-20">
                        Access Denied
                    </h2>

                    <!-- Açıklama -->
                    <p class="stext-107 cl6 p-b-30">
                        You don't have permission to access this page. 
                        Please contact the administrator if you believe this is an error.
                    </p>

                    <!-- Butonlar -->
                    <div class="flex-w flex-c-m">
                        <a asp-controller="Home" asp-action="Index" 
                           class="flex-c-m stext-101 cl0 size-121 bg3 bor1 hov-btn3 p-lr-15 trans-04 m-r-10 m-b-10">
                            Go to Home
                        </a>
                        
                        <a asp-controller="Auth" asp-action="Login" 
                           class="flex-c-m stext-101 cl0 size-121 bg1 bor1 hov-btn1 p-lr-15 trans-04 m-b-10">
                            Login
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


